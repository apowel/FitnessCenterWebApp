@model FitnessCenterWebApp.Models.Member

@{
    ViewBag.Title = "Create Member";
}

<form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Membership" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Membership" class="custon-select sr-sm-2"
                    asp-items="Html.GetEnumSelectList<FitnessCenterWebApp.Models.Membership>()"></select>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary m-1">Create</button>
    </div>
</form>