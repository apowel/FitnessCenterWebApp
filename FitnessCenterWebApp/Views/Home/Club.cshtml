@model FitnessCenterWebApp.Models.Club

@{
    ViewBag.Title = Model.Name;
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/@{@Model.Name}.jpg"
                     asp-append-version="true" />
                <h4>Address : @Model.Address</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="checkin"
                   class="btn btn-primary m-1">Check In</a>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="clublist"
                   class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>
